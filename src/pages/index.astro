---
import Layout from "../layouts/Layout.astro";

import "@/styles/globals.css";
---

<Layout
  title="Frontend Mentor | Fylo landing page with dark theme and features grid"
>
  <header
    class="flex items-center justify-between gap-[5.25rem] pl-5 pr-6 pt-6"
  >
    <div class="w-20">
      <img src="/public/images/logo.svg" alt="logo" class="" />
    </div>
    <nav class="">
      <ul class="flex justify-between gap-6">
        <li class="">
          <a
            href=""
            class="cursor-pointer font-Raleway text-xs font-normal leading-normal text-[#fff] transition-all duration-500 ease-in-out hover:font-bold hover:underline"
            >Features</a
          >
        </li>
        <li class="">
          <a
            href=""
            class="cursor-pointer font-Raleway text-xs font-normal leading-normal text-[#fff] transition-all duration-500 ease-in-out hover:font-bold hover:underline"
            >Team</a
          >
        </li>
        <li class="">
          <a
            href=""
            class="cursor-pointer font-Raleway text-xs font-normal leading-normal text-[#fff] transition-all duration-500 ease-in-out hover:font-bold hover:underline"
            >Sign In</a
          >
        </li>
      </ul>
    </nav>
  </header>
  <main>
    <section
      class="mt-[3.31rem] flex flex-col items-center justify-center gap-[2.06rem]"
    >
      <div class="pl-[2.25rem] pr-[2.19rem]">
        <img src="/public/images/illustration-intro.png" alt="" class="" />
      </div>
      <div
        class="flex flex-col items-center justify-center gap-[0.94rem] px-[1.75rem] text-center text-[#fff]"
      >
        <h1 class="font-Raleway text-2xl">
          All your files in one secure location, accessible anywhere.
        </h1>
        <p class="font-Sans">
          Fylo stores all your most important files in one secure location.
          Access them wherever you need, share and collaborate with friends
          family, and co-workers.
        </p>
        <button type="button" class="btn h-12 w-[15rem] font-Raleway"
          >Get Started</button
        >
      </div>
    </section>
  </main>
</Layout>

<style>
  .btn {
    background: linear-gradient(135deg, #63e1d9 -42.11%, #34a0cd 100%);
    box-shadow: 2px 3px 6px rgba(0, 0, 0, 0.16);
  }
</style>
